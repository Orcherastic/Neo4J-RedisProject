@page
@using NBP_I_PROJEKAT.Models
@model List<Objava>

@{
   // ViewData["Title"] = "Objave";
}

<div class="container">
    <div class="row main-row d-flex justify-content-center">
        @if (Model.Count > 0)
            foreach (var o in Model)
            {
                <div class="col-3 mt-2 d-flex justify-content-center">
                    <div class="card card-shadow" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title">@o.Naziv</h5>
                            <h6 class="card-subtitle mb-2 text-muted">Tag: @o.Tag</h6>
                            <p class="card-text">Sadrzaj: @o.Sadrzaj</p>
                            <a asp-controller="Objava" asp-action="PrikaziPojedinacneObjaveKorisnika" asp-route-objavaId="@o.Id" class="card-link">Otvori</a>
                        </div>
                    </div>
                </div>
            }
    </div>
</div>

